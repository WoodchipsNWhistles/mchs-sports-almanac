layout: base.njk
title: Lady Wave Basketball
---

<header>
  <p class="kicker"><a href="{{ '/' | url }}">← Back to Almanac</a></p>
  <h1 class="masthead-title" style="font-size:clamp(1.9rem,3.5vw,3rem);">Lady Wave Basketball</h1>
  <hr class="rule">
</header>

<p>
  Overall Record ({{ overallRecords.lwbb.firstSeasonYearEnd }}–{{ overallRecords.lwbb.lastSeasonYearEnd }})<br>
  {{ overallRecords.lwbb.w }} Wins — {{ overallRecords.lwbb.l }} Losses
</p>

{% set seasons = lwbbSeasons or [] %}

<h2>Seasons</h2>

{% if seasons and seasons.length %}
  <ul>
{%- for s in seasons | reverse -%}
  <li>
    <a href="{{ ('/lwbb/season/' ~ s.yearEnd ~ '/') | url }}"><strong>{{ s.label }}</strong></a>
  </li>
{%- endfor -%}
  </ul>
{% else %}
  <p>No published seasons.</p>
{% endif %}